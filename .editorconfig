# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
continuation_indent_size = 4

[*.sql]
indent_style = space
indent_size = 4
continuation_indent_size = 8

[{*.ts, *.json, *.js}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
